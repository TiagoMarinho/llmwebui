{
	"name": "llmwebui",
	"private": true,
	"workspaces": [
		"backend",
		"frontend",
		"mock-llm-server"
	],
	"scripts": {
		"dev": "concurrently --names \"MOCK SERVER,BACKEND,FRONTEND\" \"npm run dev:mock-llm-server\" \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:backend": "cd backend && npm run dev",
		"dev:frontend": "cd frontend && npm run dev",
		"dev:mock-llm-server": "cd mock-llm-server && npm run dev",
		"build": "cd frontend && npm run build",
		"start": "cd backend && node src/server.js",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"concurrently": "^9.2.1",
		"nodemon": "^3.1.10",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2"
	},
	"dependencies": {
		"lucide-react": "^0.553.0"
	}
}
